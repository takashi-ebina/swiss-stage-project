{
  "name": "swiss-stage-project",
  "private": true,
  "type": "module",
  "version": "1.6.0",
  "description": "swiss stage project",
  "author": "Takashi Ebina",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "$comment": "\"build\": \"run-p type-check \"build-only {@}\" --\"",
    "build": "tsc --project electron/tsconfig.main.json && tsc --project electron/tsconfig.preload.json",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --fix",
    "electron:dev": "concurrently -k \"vite --host\" \"wait-on http://localhost:3000 && npm run electron:start\"",
    "electron:start": "cross-env NODE_ENV=development electron dist-electron/main.js",
    "electron:build": "vite build && npm run build && electron-builder --win --x64"
  },
  "dependencies": {
    "core-js": "^3.37.1",
    "pinia": "^3.0.1",
    "roboto-fontface": "*",
    "sqlite3": "^5.1.7",
    "vue": "^3.4.31",
    "vue-toast-notification": "^3.1.3",
    "vuetify": "^3.8.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@mdi/font": "^7.4.47",
    "@tsconfig/node22": "^22.0.0",
    "@types/node": "^22.9.0",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vue/eslint-config-typescript": "^14.1.3",
    "@vue/tsconfig": "^0.5.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "35.1.4",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.14.0",
    "eslint-plugin-vue": "^9.30.0",
    "npm-run-all2": "^7.0.1",
    "sass": "1.77.8",
    "sass-embedded": "^1.77.8",
    "typescript": "~5.6.3",
    "unplugin-fonts": "^1.1.1",
    "unplugin-vue-components": "^0.27.2",
    "unplugin-vue-router": "^0.10.0",
    "vite": "^5.4.10",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-vuetify": "^2.0.3",
    "vue-router": "^4.4.0",
    "vue-tsc": "^2.1.10",
    "wait-on": "^8.0.3"
  },
  "build": {
    "publish": {
      "provider": "github",
      "owner": "takashi-ebina",
      "repo": "swiss-stage-project",
      "releaseType": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "swiss-stage-project.ico"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "data/**/*",
      "package.json"
    ]
  }
}
